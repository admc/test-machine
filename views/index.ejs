  <script type="text/javascript" charset="utf-8">
    var page = [];
    var url = null;
    
    var submitUser = function() {  
      $.post("analyze", {url:$("#url").attr("value")},
        function(data) {
          page = JSON.parse(data);
          url = $("#url").attr("value");
          var testContainer = $("<div>");
          testContainer.attr("id", "testContainer");
          testContainer.css("overflow", "auto");
          
          $.each(page, function(index, value) {
            var entryDiv = $("<div>");
            entryDiv.css({"border":"1px solid lightgray", "padding":"10px"});
            if (value.text) {
              entryDiv.html("<div>"+value.method+"</div> <div>"+value.value+"</div><div>"+value.text+"</div>");
            }
            else {
              entryDiv.html("<div>"+value.method+"</div> <div>"+value.value+"</div>"); 
            }
            testContainer.append(entryDiv);
          });
          
          var full = $("<div>");
          full.attr("id", "full");
          full.addClass("overlay");
          $(document.body).append(full);
          
          
          $(document.body).append(testContainer);
          testContainer.dialog({"title": "Your "+url+" Test", width: 460, height:550, zIndex: 3999, position:[0,0]});
          
          $.post("run", {"test":JSON.stringify(page), "url":url},
             function(data) {
               var obj = JSON.parse(data);
               var iframe = $("<iframe>");
               iframe.attr("id", "sauceIframe")
               iframe.attr("src", "https://saucelabs.com/jobs/"+ obj.sid)
               iframe.css({
                 position:"absolute",
                 top:"00px",
                 left:"00px",
                 width:"100%",
                 height:"100%"
               })
               $(document.body).append(iframe);
                var doRedirect  = function() {
                  $("#sauceIframe")[0].src = "https://saucelabs.com/jobs/"+ obj.sid+"/";
                  $("#full").remove();
                  testContainer.dialog('close');
                }
                setTimeout(doRedirect, 15000);
             });
          
        });
    }
  </script>
